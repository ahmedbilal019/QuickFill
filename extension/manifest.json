{
  "manifest_version": 3,
  "name": "QuickFill - Auto Form Filler",
  "version": "1.0.0",
  "description": "Automatically fill web forms with saved templates. Save time and reduce errors!",
  "author": "QuickFill Team",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:4010/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "QuickFill - Click to fill forms"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "utils/*"],
      "matches": ["<all_urls>"]
    }
  ]
}